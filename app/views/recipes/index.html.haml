= render :partial => 'shared/searchbar'

.row
	.col-xs-12.col-sm-4.col-md-2.cook_area

	.col-xs-12.col-sm-8.col-md-10.recipes_are
		.row
			.title
				%h1= "Les recettes de " + @cook.name
		.row
			.col-xs-6.col-md-8
				- if @adress.present?
					.adress_area
						%h4=@adress
						= link_to cooks_path do
							= image_tag "icons/cross.png", class: "logo_field"
			.col-xs-6.col-md-4
				.row
					.col-xs-3	
						%h4= "trier par :"
					.col-xs-3	
						%h4=link_to "note"
					.col-xs-3	
						%h4=link_to "durée"
					.col-xs-3	
						%h4=link_to "spécialité"

		- @recipes.each_slice(4) do |slice|
			.row
				- @recipes.each do |recipe|
					.col-md-4
						.recipe
							=link_to recipe do
								%h2= recipe.title
								= @nb_votes.to_s + " votes"	
								- recipe.stars.times do 
									= image_tag "icons/star.png"
								.image_wrapper
									=image_tag recipe.image.url(:thumb)
								%h5= recipe.description
								%h5= recipe.duration.to_s + " min"
								%h5= recipe.dish_type
								//%h5= recipe.saved



