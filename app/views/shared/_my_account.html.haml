%h1='Mon compte'
.col-xs-6
	%li='Votre pseudo (affiché sur le site) : ' + @user.pseudo
	%li='Votre email (ne sera pas affiché) : ' + @user.email
	%li='Password : '
	%li='Password : '
	=link_to "Supprimer mon compte", edit_user_registration_path(@user), data: { confirm: "Toutes les données de votre compte seront supprimées ! Etes-vous sûr ?" }, method: :delete, class: 'btn btn-danger'

.col-xs-6
	.row
		.col-xs-6
			%h4 Mon book de recettes
		.col-xs-6
			= pluralize(@book_recipes.count, ' recette')
			=link_to "Vider", "", class: 'btn btn-danger'
	.row
		=link_to "Créer une recette", new_recipe_path, class: 'btn btn-info'

- if @cook.blank?
	%h3='Devenez cook et partagez votre talent !'
	=link_to "Activer mon cookadom", new_cook_path, class: 'btn btn-info'

- else
	%h1='Mon cook'
	%li='nom du cuisinier : ' + @cook.name
	%li='nom : ' + @user.first_name
	%li='prénom : ' + @user.last_name
	%li='gender : ' + @user.gender 
	%li='introduction : ' + @cook.introduction
	%li='adresse : ' + @cook.postal_code
	%li='distance de travail : ' + @cook.working_distance + ' km'

	=link_to "Désactiver mon cookadom", cook_path(@cook), method: :delete, data: {confirm: "Votre cuisinier et toutes vos recettes seront supprimées ! Etes-vous sûr ?"}, class: 'btn btn-danger'
	=link_to "Modifier mon cookadom", edit_cook_path(@cook), class: 'btn btn-info'

	=pluralize(@recipes.count, 'recette proposée')
	- @recipes.each do |recipe|
		=link_to recipe.title, recipe_path(recipe)


%li=link_to "Modifier mon compte", edit_user_registration_path(@user), class: 'btn btn-info'


