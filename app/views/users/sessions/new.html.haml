.row
	%h2='Log in'
	= form_for(@user, url: session_path(resource_name)) do |f|
		= f.text_field :email, required: false, input_html: { class: 'form-control' }, autofocus: true
		= f.password_field :password, required: false, input_html: { class: 'form-control' }
		%h4= "Se souvenir de moi"
		= f.check_box :remember_me, as: :boolean, input_html: { class: 'checkbox' } if devise_mapping.rememberable?

		= f.submit "Log in", class: 'btn btn-primary'

