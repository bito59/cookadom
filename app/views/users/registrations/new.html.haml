.row
	%h2='Sign up'
	= form_for(@user, url: registration_path(resource_name)) do |f|
		= f.text_field :email, required: true, autofocus: true, input_html: { class: 'form-control' }
		= f.text_field :pseudo, required: true
		= f.password_field :password, required: true, input_html: { class: 'form-control' }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
		= f.password_field :password_confirmation, required: true, input_html: { class: 'form-control' }
		= f.submit "Valider", class: 'btn btn-primary'

