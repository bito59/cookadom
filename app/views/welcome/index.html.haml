#fullpage
	.row.section
		//welcome :page 1
		#jingle.jingle
			%h2 Vivez la découverte entre amis depuis votre cuisine !
		= image_tag "welcome_font/welcome#{rand(5)}.jpg", class: "font_picture"
		#search_area.search_area
			.row
				.col-sm-2
					= image_tag "icons/position.png", class: "logo_field"
				.col-sm-8
					%h2= text_field_tag :address, 'address', value: '', placeholder: 'Adresse de ma cuisine', class: ''
				.col-sm-2
					= image_tag "icons/kitchen.png", class: "logo_field"

			= form_tag cooks_path, :method => :get do
				= hidden_field_tag(:lat, 'no', "data-geo"=>"lat")
				= hidden_field_tag(:lng, 'no', "data-geo"=>"lng")
				= hidden_field_tag(:formatted_address, 'no', "data-geo"=>"formatted_address")
				= submit_tag "VOIR LES COOKS", class: 'btn_search_cook'

		#pub.pub
			- if @cook.nil?
				%h2 Vous avez un talent culinaire ?
				=link_to "Devenez cook", new_user_registration_path, class: 'btn_pub'

	.row.section
		//welcome :page 2
		#process
			%h2 Comment ça marche ?
			.process_block
				= image_tag "process/cook.png", class: "logo_process"
				%h5 Trouvez autour de chez vous le cook qui vous intéresse
			.process_block
				= image_tag "process/menu.png", class: "logo_process"
				%h5 Choisissez la prestation et contactez-le
			.process_block
				= image_tag "process/shop.png", class: "logo_process"
				%h5 Faites les courses ou demandez-les au cook
			.process_block
				= image_tag "process/cooking.png", class: "logo_process"
				%h5 Cuisinez et apprenez avec les conseils du cook
			.process_block
				= image_tag "process/party.png", class: "logo_process"
				%h5 Vivez l'expérience en recevant chez vous !

		#content
			%h2 Hôtes : recevez différemment chez vous
			%h5 Organisez un moment convivial de découverte culinaire pour un budget limité
			= image_tag "welcome_hote.png", class: "welcome_picture"
			=link_to "chercher un cook", cooks_path, class: 'btn_search_cook'
			= image_tag "icons/button welcome/cook white.png"

		#content
			%h2 Cooks : Partagez votre talent
			%h5 Proposez des cours à domicile sans contraintes
			= image_tag "welcome_chef.png", class: "welcome_picture"
			=link_to "devenir cook", new_cook_path, class: 'btn_become_cook'
			= image_tag "icons/button welcome/cooking white.png"

		#content
			%h2 Les avantages cookadom
			.avantage_block
				= image_tag "avantages/degree.png"
				%h5 Contrôlez le niveau du cook et sa spécialité
			.avantage_block
				= image_tag "avantages/star.png"
				%h5 Vérifiez les commentaires et avis sur le cook
			.avantage_block
				= image_tag "avantages/pay.png"
				%h5 Payez le cook après la prestation en main propre
			.avantage_block
				= image_tag "avantages/calendar.png"
				%h5 Gérez votre organisation directement avec le cook
			.avantage_block
				= image_tag "avantages/book.png"
				%h5 Retrouvez vos recettes sur le site

:javascript

	$(document).ready(function() {
	    $('#fulpage').fullpage();
	});
