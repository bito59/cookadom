	$(document).ready(function(){
	    $('#dish_type').editable({
	        ajaxOptions:{
	            type: 'put',
	            dataType: 'json'
	        },
	        success: function(response, newValue) {
	            if(!response.success) alert(response.msg);
	        }
	    });
	});



